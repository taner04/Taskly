<Page x:Class="Desktop.MVVM.Home.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:home="clr-namespace:Desktop.MVVM.Home"
      xmlns:controls="clr-namespace:Desktop.MVVM.Home.Controls"
      d:DataContext="{d:DesignInstance home:HomePage,
                                   IsDesignTimeCreatable=False}"
      d:DesignHeight="900"
      d:DesignWidth="1000"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="500" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Hero Section -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Grid.Row="0">
            <ui:TextBlock Text="Welcome to Your Smarter To-Do List"
                          FontSize="44"
                          FontWeight="Bold"
                          TextAlignment="Center"
                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                          TextWrapping="Wrap"
                          Margin="0,0,0,16" />

            <ui:TextBlock Text="Stay organized, stay focused, and get more done — all in one place."
                          FontSize="20"
                          FontWeight="SemiBold"
                          TextAlignment="Center"
                          Foreground="{StaticResource AccentBrush}"
                          TextWrapping="Wrap"
                          Margin="0,0,0,24" />

            <ui:TextBlock
                Text="Our interactive to-do app helps you manage tasks effortlessly with real-time updates, a clean intuitive design, and best of all — it's completely open source and free."
                FontSize="17"
                TextAlignment="Center"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                TextWrapping="Wrap"
                LineHeight="24"
                Margin="0,0,0,0" />
        </StackPanel>

        <!-- Features Section -->
        <StackPanel HorizontalAlignment="Stretch"
                    Grid.Row="1">
            <ui:TextBlock Text="Why You'll Love It"
                          FontSize="32"
                          FontWeight="SemiBold"
                          TextAlignment="Center"
                          Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                          Margin="0,0,0,40" />

            <ItemsControl ItemsSource="{Binding ViewModel.FeatureItems}"
                          Width="1120"
                          Height="390"
                          HorizontalAlignment="Center"
                          Margin="0,24,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>


                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:FeatureCard Icon="{Binding Icon}"
                                              Title="{Binding Title}"
                                              Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>

        <!-- Footer Section -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10"
                    Grid.Row="2">
            <ui:TextBlock Text="Let's get things done — one task at a time."
                          FontSize="17"
                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                          FontWeight="Medium"
                          Margin="0,0,0,24"
                          TextAlignment="Center" />
            <ui:HyperlinkButton NavigateUri="https://github.com/taner04/Taskly"
                                Foreground="{StaticResource AccentBrush}"
                                Content="View on github"
                                FontSize="22"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center" />
        </StackPanel>

    </Grid>
</Page>